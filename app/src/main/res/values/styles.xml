<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextOutput">
        <item name="android:background">@color/white</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="android:strokeWidth">3</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="EditTextStyle.InputNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">18</item>

    </style>

    <style name="EditTextStyle.InputNumber.Binary">
        <item name="android:digits">"01"</item>
    </style>

    <style name="EditTextStyle.InputNumber.Octal">
        <item name="android:digits">"01234567"</item>
    </style>

    <style name="EditTextStyle.InputNumber.Decimal">
        <item name="android:digits">"0123456789."</item>
    </style>

    <style name="EditTextStyle.InputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="EditTextStyle.InputText.Hexadecimal">
        <item name="android:digits">"0123456789abcdefABCDEF"</item>
    </style>

    <style name="ButtonClear">
        <item name="android:background">@drawable/button_shape_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextViewNumberType">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:background">@drawable/round_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextViewNumberType.Binary">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/text_shape_semi_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:background">@drawable/round_edittext</item>
    </style>


</resources>