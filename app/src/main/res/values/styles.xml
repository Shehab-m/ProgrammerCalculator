<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextOutput">
        <item name="android:background">@color/white</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="android:strokeWidth">3</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="EditTextStyle.InputNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">18</item>

    </style>

    <style name="EditTextStyle.InputNumber.Binary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">"01"</item>
    </style>

    <style name="EditTextStyle.InputNumber.Octal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">"01234567"</item>
    </style>

    <style name="EditTextStyle.InputNumber.Decimal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">"0123456789."</item>

    </style>

    <style name="EditTextStyle.InputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="EditTextStyle.InputText.Hexadecimal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:digits">"0123456789abcdefABCDEF"</item>
    </style>


</resources>